<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.burningaltar.timebuckets.TimeBucketsActivity">

    <TextView
        android:id="@+id/lbl_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="4dp"
        android:gravity="right|center_vertical"
        android:textSize="20sp"
        tools:text="Projects started at 10:50" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/lbl_info"
        android:orientation="vertical" />

    <EditText
        android:id="@+id/txt_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/lbl_info"
        android:layout_marginLeft="4dp"
        android:background="#fff"
        android:hint="@string/hint_new_bucket"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:paddingRight="4dp"
        android:singleLine="true"
        android:textColor="#000"
        android:textColorHint="#4000"
        android:textSize="24sp"
        android:visibility="invisible" />

</RelativeLayout>
